@require('../../assets/styles/vars.styl')
@require('../../assets/styles/fonts.css')

.swiper-container
  margin-left auto
  margin-right auto
  position relative
  overflow hidden
  z-index 1
  min-height 645px
  width 1540px

.swiper-wrapper
  text-align center

.swiper-slide
  width 1480px
  margin 0 auto
  text-align left

.swiper-pagination-bullet
  opacity 1
  background $light-grey
  border 1px solid #000
  box-shadow: 3px 6px 23px rgba(0, 0, 0, .27)

.swiper-pagination-bullet-active
  opacity 1
  background $gold

.Swiper__Slide__Content
  padding 0 80px

.Swiper__Image
  width 400px
