  max-height 850px

/* swiper style overrides */
.swiper-container
  margin-left auto
  margin-right auto
  position relative
  overflow hidden
  z-index 1
  height 645px
  width 1200px

.swiper-wrapper
  text-align center

.swiper-slide
  background-size cover
  background-repeat no-repeat
  background-position center center
  position relative

.swiper-pagination
  position relative !important
  padding-top 20px

.swiper-pagination-bullet
  opacity 1
  background $light-grey
  border 1px solid $black
  box-shadow 3px 6px 23px $black-alpha

.swiper-pagination-bullet-active
  opacity 1
  background $gold

.swiper-button-disabled
  color $black-alpha-dark
