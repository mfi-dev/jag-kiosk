    background-position center center
    position absolute
    height 60px
    width 60px
    top calc(50% - 50px)

  &__Nav--Prev
    left 0

  &__Nav--Next
    right 0
    transform scaleX(-1)

  &__ImageDescription
    background-color $black-alpha-dark
    width 100%
    text-align center
    position absolute
    bottom 0
    padding 20px

  &__Images
    display none

  &__LightboxImage
    max-width 1500px

.LightBox
  max-width 1500px
  position relative

  &__Description
    position absolute
    bottom 0
    width calc(100% - 50px)
    padding 20px 0
    background-color $black-alpha-dark
    text-align center

/* featherlight overrides */
.featherlight .featherlight-content
  overflow hidden

/* swiper style overrides */
.swiper-container
  margin-left auto
  margin-right auto
  position relative
  overflow hidden
  z-index 1
  height 645px
  width 1200px

.swiper-wrapper
  text-align center

.swiper-slide
  background-size cover
  background-repeat no-repeat
  background-position center center
  position relative

.swiper-pagination
  position relative !important
  padding-top 20px

.swiper-pagination-bullet
  opacity 1
  background $light-grey
  border 1px solid $black
  box-shadow 3px 6px 23px $black-alpha

.swiper-pagination-bullet-active
  opacity 1
  background $gold
