    text-align center
    position absolute
    bottom 0
    padding 20px

  &__Images
    display none

  &__LightboxImage
    max-width 1500px

.LightBox
  max-width 1500px
  position relative

  &__Description
    position absolute
    bottom 0
    width 100%
    padding 20px 0
    background-color $black-alpha-dark
    text-align center

  &__Image
    max-height 800px

