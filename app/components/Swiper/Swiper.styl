@require('../../assets/styles/vars.styl')
@require('../../assets/styles/fonts.css')

$content-area-padding = 80px

.Swiper__Slide__Content
  padding 0 $content-area-padding

.Swiper__Image
  width 400px

/* swiper style overrides */
.swiper-container
  margin-left auto
  margin-right auto
  position relative
  overflow hidden
  z-index 1
  min-height 645px
  width 1540px

.swiper-wrapper
  text-align center

.swiper-slide
  width 1480px
  margin 0 auto
  text-align left

.swiper-pagination-bullet
  opacity 1
  background $light-grey
  border 1px solid $black
  box-shadow: 3px 6px 23px $black-alpha

.swiper-pagination-bullet-active
  opacity 1
  background $gold
